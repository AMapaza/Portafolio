<section id="contacto" class="min-h-screen flex flex-col items-center justify-center">
  <div class="mx-auto px-4 max-w-lg text-white rounded-lg p-8">
    <h3 class="text-3xl font-bold text-center mb-6">Contáctame</h3>
    <form method="POST" action="#inicio" class="space-y-4">
      <input type="text" name="nombre" placeholder="Tu nombre" required class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-600"/>
      <input type="email" name="email" placeholder="Tu correo electrónico" required class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-600"/>
      <textarea name="mensaje" placeholder="Tu mensaje" rows="4" required class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-600"></textarea>
      <button type="submit" class="w-full bg-sky-800 text-white py-2 rounded hover:bg-blue-900 transition">Enviar mensaje </button>
    </form>
  </div>
</section>
